        boolean s_or;
        
        lock m;
        m.process_state = m.process_state[0 -> 0];
        m.event_state = m.event_state[0 -> 20];
        init = true;

        loop_invariant true 
                ** Perm(m, 1\2)  
                ** (m != null)  
                ** held(m)  
                ** m.global_permission() 
                ** (m.half == this) 
                ** Perm(init, 1\2)
                ** init;
        while (m.process_state[0] != -1 || m.event_state[0] != -2) {
            unlock m;
            lock m;
        }
        loop_invariant true ** 
                Perm(m, read) ** 
                (m != null) ** 
                held(m)  ** 
                m.global_permission() ** 
                (m.half == this) 
                ** Perm(init, 1\2)
                ** init;
        while (true) {
            s_nand = !(a && b);
            s_or = a || b;
            sum = s_nand && s_or;
            carry = a && b;
            m.process_state = m.process_state[0 -> 1];
            m.event_state = m.event_state[1 -> 50];
            loop_invariant true ** 
                    Perm(m, read) ** 
                    (m != null) ** 
                    held(m)  ** 
                    m.global_permission() ** 
                    (m.half == this) 
                    ** Perm(init, 1\2)
                    ** init;
            while (m.process_state[0] != -1 || m.event_state[1] != -2) {
                unlock m;
                lock m;
            }
        }
        unlock m;
    }
    
}



