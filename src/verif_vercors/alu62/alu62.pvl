class ALU { 
    Main m;
    int OPCODE;
    int OP10, OP11;
    int OP20, OP21;
    boolean CARRY, ZERO;
    int RESULT0, RESULT1;

    //internal varibles
    int data10, data11;
    int data20, data21;
    int opcode;
    int result0, result1;
    int i;

    //Auxiliar varibles
    int pos;
    int div1;
    int div2;
    int bit1;
    int bit2;

    int res_bop;  
    int current_bit;
    int div3;
    int bit;
    int divisor;
    int res_st;
    int global_result; 
    
    ensures Perm(m, write) ** (m == m_param) 
            ** Perm(OPCODE, write) **  OPCODE == 0 
            ** Perm(OP10, write) **  OP10 == 0 
            ** Perm(OP11, write) **  OP11 == 0 
            ** Perm(OP20, write) **  OP20 == 0 
            ** Perm(OP21, write) **  OP21 == 0 
            ** Perm(CARRY, write) ** !CARRY 
            ** Perm(ZERO, write) ** !ZERO 
            ** Perm(RESULT0, write) ** RESULT0 == 0 
            ** Perm(RESULT1, write) ** RESULT1 == 0 
            ** Perm(data10, write) 
            ** Perm(data11, write) 
            ** Perm(data20, write) 
            ** Perm(data21, write) 
            ** Perm(opcode, write) 
            ** Perm(result0, write) 
            ** Perm(result1, write) 
            ** Perm(i, write) 
            ** Perm(pos, write) 
            ** Perm(div1, write) 
            ** Perm(div2, write) 
            ** Perm(bit1, write) 
            ** Perm(bit2, write) 
            ** Perm(res_bop, write) 
            ** Perm(current_bit, write) 
            ** Perm(div3, write) 
            ** Perm(bit, write) 
            ** Perm(divisor, write) 
            ** Perm(res_st, write) 
            ** Perm(global_result, write) 
            ;
    ALU(Main m_param){
        m = m_param;
        OPCODE = 0;
	    OP10 = 0;
	    OP11 = 0;
	    OP20 = 0;
	    OP21 = 0;
	    CARRY = false;
	    ZERO = false;
	    RESULT0 = 0;
	    RESULT1 = 0;
    }
    
    context Perm(m, read) 
            ** (m != null) 
            ** held(m) 
            ** m.global_permission() 
            ** (m.alu == this) 
            ;
    ensures m.def_input_permission()     
            ** ZERO == false
            ** (data10 == (OP10 % m.MAX_RESULT))
            ** (data11 == (OP11 % m.MAX_RESULT))
            ** (data20 == (OP20 % m.MAX_RESULT))
            ** (data21 == (OP21 % m.MAX_RESULT))
            ** (opcode == (OPCODE % m.MAX_OPCODE));
    void def_input(){        
        ZERO = false;
        data10 = OP10 % m.MAX_RESULT;
        data11 = OP11 % m.MAX_RESULT;
        data20 = OP20 % m.MAX_RESULT;
        data21 = OP21 % m.MAX_RESULT;
        opcode = (OPCODE % m.MAX_OPCODE);
    }

    context Perm(m, read) 
            ** (m != null) 
            ** held(m) 
            ** m.global_permission() 
            ** (m.alu == this) 
            ;
    ensures m.def_input_permission()
            ** m.switch_alu_permission()
            ** ((opcode == 0) ==> (result0 == (data10 + data20)))
            ** ((opcode == 0) ==> (result1 == (((data10 + data20) >= m.MAX_RESULT) ? (data11 + data21 + 1) : (data11 + data21))))
            ** ((opcode == 1) ==> (result0 == ((data10 - data20) > 0 ? (data10 - data20) : (data20 - data10))))
            ** ((opcode == 1) ==> (result1 == (((data10 - data20) < 0) ? (data11 - data21 - 1) : (data11 - data21))))
            ** ((opcode == 2) ==> (result0 == (data10 + 1)))
            ** ((opcode == 2) ==> (result1 == ((data10 + 1) >= m.MAX_RESULT ? (data11 + 1 ) : data11)))
            ** ((opcode == 3) ==> (result0 == ((data10 - 1) < 0 ? (0 - (data10 - 1)) : (data10 - 1))))
            ** ((opcode == 3) ==> (result1 == ((data10 - 1) < 0 ? (data11 - 1) : data11)))
            ;
    void switch_alu(){   
        if (opcode == 0) {
            result0 = data10 + data20;
            result1 = data11 + data21;
            if (result0 >= m.MAX_RESULT) {
                result1 = result1 + 1;
            }
        } else if (opcode == 1) {
            result0 = data10 - data20;
            result1 = data11 - data21;
            if (result0 < 0) {
                result0 = 0 - result0;
                result1 = result1 - 1;
            }
        } else if (opcode == 2) {
            result0 = data10 + 1;
            result1 = data11;
            if (result0 >= m.MAX_RESULT) {
                result1 = result1 + 1;
            }
        } else if (opcode == 3) {
            result0 = data10 - 1;
            result1 = data11;
            if (result0 < 0) {
                result0 = 0 - result0;
                result1 = result1 - 1;
            }
        } 
    }

    context Perm(m, read) 
            ** (m != null) 
            ** held(m) 
            ** m.global_permission() 
            ** (m.alu == this) 
            ;
    ensures m.def_input_permission()
            ** m.switch_alu_permission()
            ** (result0 == \old(result0))
            ** (result1 == \old(result1))
            ;
    ensures (RESULT0 == (result0 % m.MAX_RESULT))
            ** (RESULT1 == (result1 % m.MAX_RESULT))
            ** (CARRY == (((result1 / m.MAX_RESULT) % 2) == 1 ? true : false))
            ** (ZERO == (((result0 % m.MAX_RESULT) == 0) ? (((result1 % m.MAX_RESULT) == 0) ? true : false ) : false))
            ;
    void def_output(){        
        RESULT0 = (result0 % m.MAX_RESULT);
        RESULT1 = (result1 % m.MAX_RESULT);
        CARRY = ((result1 / m.MAX_RESULT) % 2) == 1 ? true : false;
        ZERO = ((result0 % m.MAX_RESULT) == 0) ? (((result1 % m.MAX_RESULT) == 0) ? true : false ) : false;
    }

    context Perm(m, read) 
            ** (m != null) 
            ** Perm(m.alu, read) 
            ** (m.alu == this) 
            ;
    void run(){
        lock m;

        loop_invariant true 
                ** Perm(m, read) 
                ** (m != null) 
                ** held(m)  
                ** m.global_permission()  
                ** (m.alu == this) 
                ;
        while (true) {
            m.process_state = m.process_state[0 -> 0];
            m.event_state = m.event_state[0 -> 5];
            loop_invariant true 
                    ** Perm(m, read) 
                    ** (m != null) 
                    ** held(m)  
                    ** m.global_permission()  
                    ** (m.alu == this) 
                    ;
            while (m.process_state[0] != -1 || m.event_state[0] != -2) {
                unlock m;
                lock m;
            }

            def_input();
            switch_alu();
            def_output();
            
        }
        unlock m;
    }
    
}

class Main { 
    seq<int> process_state;
    seq<int> event_state;
    ALU alu;
    
    int N_BITS;
    int MAX_RESULT;
    int MAX_OPCODE;

    inline resource scheduler_permission_invariant() = true 
            ** Perm(process_state, write) ** |process_state| == 1 
            ** Perm(event_state, write)   ** |event_state| == 1 
            ** (\forall int i = 0 .. |process_state|; ((({: process_state[i] :} == -1)) 
               || (((process_state[i] >= 0) && (process_state[i] < |event_state|))) ))
            ;
    
    inline resource def_input_permission() = true
            ** (alu.OP10   == \old(alu.OP10))
            ** (alu.OP11   == \old(alu.OP11))
            ** (alu.OP20   == \old(alu.OP20))
            ** (alu.OP21   == \old(alu.OP21))
            ** (alu.OPCODE == \old(alu.OPCODE))
            ;
    
    inline resource switch_alu_permission() = true
